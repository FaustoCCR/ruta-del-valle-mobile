<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.PerfilFragment"
    android:paddingTop="60dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#2F428C"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:focusableInTouchMode="false"
            android:src="@drawable/ic_person" />

        <EditText
            android:id="@+id/eteNombre"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@drawable/field_border"
            android:backgroundTint="#DBD4E2"
            android:ems="10"
            android:fontFamily="@font/source_sans_pro_regular"
            android:hint="@string/ph_nombre"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:padding="15dp"
            android:textAlignment="center"
            android:textColor="@color/input" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_card"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>

            <EditText
                android:id="@+id/eteDni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/field_border"
                android:ems="10"
                android:fontFamily="@font/source_sans_pro_regular"
                android:hint="@string/ph_DNI"
                android:inputType="number"
                android:padding="15dp"
                android:textColor="@color/input"
                android:textColorHint="@color/input"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:src="@drawable/ic_user" />

            <EditText
                android:id="@+id/eteUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/field_border"
                android:ems="10"
                android:fontFamily="@font/source_sans_pro_regular"
                android:hint="@string/ph_username"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:textColor="@color/input"
                android:textColorHint="@color/input"
                android:textSize="16dp"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:src="@drawable/ic_email" />

            <EditText
                android:id="@+id/eteEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/field_border"
                android:ems="10"
                android:fontFamily="@font/source_sans_pro_regular"
                android:hint="@string/ph_email"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                android:textColor="@color/input"
                android:textColorHint="@color/input"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:src="@drawable/ic_phone" />

            <EditText
                android:id="@+id/eteTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/field_border"
                android:ems="10"
                android:fontFamily="@font/source_sans_pro_regular"
                android:hint="@string/ph_telefono"
                android:inputType="phone"
                android:padding="15dp"
                android:textColor="@color/input"
                android:textColorHint="@color/input"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:src="@drawable/ic_key" />

            <EditText
                android:id="@+id/etePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/field_border"
                android:ems="10"
                android:fontFamily="@font/source_sans_pro_regular"
                android:hint="@string/ph_password"
                android:inputType="textPassword"
                android:padding="15dp"
                android:textColor="@color/input"
                android:textColorHint="@color/input"
                android:textSize="16dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:background="@drawable/button_style"
            android:backgroundTint="#FD6C88"
            android:fontFamily="@font/source_sans_pro_bold"
            android:text="@string/btnEditar"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:visibility="visible" />

    </LinearLayout>
</LinearLayout>